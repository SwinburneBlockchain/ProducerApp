<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swinblockchain.producerapp.ScanQR.LocationParameterActivity">

    <Button
        android:id="@+id/sendTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendTransaction"
        android:text="Move Product"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.932" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product is moving"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/producerOld"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="product"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/producerNew"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/producerOld" />

    <TextView
        android:id="@+id/producerNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="producerNew"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sendTransaction"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product" />

    <TextView
        android:id="@+id/producerOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="producerOld"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/product"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="44dp"
        app:srcCompat="@mipmap/arrow"
        app:layout_constraintBottom_toTopOf="@+id/producerNew"
        app:layout_constraintTop_toBottomOf="@+id/product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="44dp"
        app:srcCompat="@mipmap/arrow"
        app:layout_constraintBottom_toTopOf="@+id/product"
        app:layout_constraintTop_toBottomOf="@+id/producerOld"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>

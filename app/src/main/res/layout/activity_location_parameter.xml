<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swinblockchain.producerapp.ScanQR.LocationParameterActivity">

    <EditText
        android:id="@+id/nxtAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="nxt Address"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sendTransaction"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendTransaction"
        android:text="Send Transaction"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nxtAddr" />
</android.support.constraint.ConstraintLayout>
